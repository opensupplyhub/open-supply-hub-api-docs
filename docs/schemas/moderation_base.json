{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents base moderation fields.",
  "properties": {
    "moderation_id": {
      "type": "string",
      "example": "123e4567-e89b-12d3-a456-426614174000",
      "description": "The unique UUID identifier of the moderation event.",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "moderation_status": {
      "type": "string",
      "example": "PENDING",
      "description": "Only one of this moderation statuses can be present in the response.",
      "enum": ["PENDING", "APPROVED", "REJECTED"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "The date and time when the moderation event was created."
    },
    "cleaned_data": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Returns location name."
        },
        "address": {
          "type": "string",
          "description": "Returns location address."
        },
        "fields": {
          "$ref": "cleaned_data_fields.json"
        },
        "sector": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "raw_json": {
          "$ref": "cleaned_data_raw_json.json"
        },
        "clean_name": {
          "type": "string"
        },
        "country_code": {
          "type": "string",
          "description": "The ISO 3166-1 alpha-2 code of the country."
        },
        "clean_address": {
          "type": "string"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "clean_name", 
        "address", 
        "clean_address", 
        "country_code", 
        "sector", 
        "raw_json", 
        "fields",
        "errors"
      ]
    }
  },
  "required": [
    "moderation_id",
    "moderation_status", 
    "created_at", 
    "cleaned_data"
  ]
}
