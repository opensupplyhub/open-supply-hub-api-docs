{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents an error returned from the API",
  "properties": {
    "detail": {
      "type": "string",
      "description": "A message describing the error"
    },
    "code": {
      "type": "number",
      "description": "A code identifying the error"
    },
    "errors": {
      "type": "array",
      "description": "An array of errors",
      "items": {
        "type": "object",
        "properties": {
          "field": {
            "type": "string",
            "description": "The field that the error is associated with"
          },
          "code": {
            "type": "number",
            "description": "A code identifying the error"
          },
          "detail": {
            "type": "string",
            "description": "A message describing the error code"
          }
        }
      }
    }
  },
  "required": ["detail"]
}
