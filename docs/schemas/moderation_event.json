{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "description": "This schema represents a moderation event",
    "allOf": [
      {
        "properties": {
          "moderation_id": {
            "type": "string",
            "format": "uuid",
            "description": "The unique identifier of moderation event"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "os_id": {
            "type": "string",
            "description": "The unique identifier for a location"
          },
          "name": {
            "type": "string",
            "description": "Returns location name"
          },
          "country": {
            "$ref": "country.json"
          },
          "contributor_id": {
            "type": "number",
            "description": "Returns contributor id"
          },
          "request_type": {
            "type": "string",
            "enum": ["CREATE", "UPDATE", "CLAIM"]
          },
          "source": {
            "type": "string",
            "enum": ["API", "SLC"],
            "description": "Source type of production location"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "RESOLVED"],
            "description": "Moderation status of the production location"
          },
          "change_date": {
            "type": "string",
            "format": "date-time"
          },
          "claim_id": {
            "type": "number",
            "description": "Linked claim id for this production location"
          }
        }
      }
    ]
}
