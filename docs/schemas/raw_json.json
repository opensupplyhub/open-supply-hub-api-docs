{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "description": "This schema represents a raw_json object.",
    "properties": {
        "name": {
            "type": "string"
        },
        "sector": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "address": {
            "type": "string"
        },
        "country": {
            "type": "string",
            "description": "The ISO 3166-1 alpha-2 code of the country."
        },
        "product_type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "facility_type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "parent_company": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "processing_type": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "number_of_workers": {
            "type": "object",
            "properties": {
                "max": {
                    "type": "integer",
                    "minimum": 0
                },
                "min": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": ["max", "min"]
        }
    },
    "required": [
        "name",
        "sector",
        "address",
        "country",
        "clean_name",
        "clean_address",
        "errors"
    ]
  }