{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents an organization or contributor.",
  "allOf": [
    {
      "$ref": "contributor_base.json"
    },
    {
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the contributor."
        },
        "description": {
          "type": "string",
          "description": "A description of the contributor."
        },
        "website_url": {
          "type": "string",
          "description": "The URL of the contributor's website."
        }
      }
    }
  ]
}
