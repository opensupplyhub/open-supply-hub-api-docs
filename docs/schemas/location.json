{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents a location.",
  "allOf": [
    {
      "properties": {
        "os_id": {
          "type": "string",
          "description": "The unique identifier for a location."
        }
      },
      "required": ["os_id"]
    },
    {
      "$ref": "location_base.json"
    },
    {
      "properties": {
        "country": {
          "$ref": "country.json"
        },
        "claim_status": {
          "type": "string",
          "description": "Indicates whether a location has been claimed by an owner or manager.",
          "enum": ["claimed", "unclaimed", "pending"]
        },
        "rba_id": {
          "type": "string",
          "maxLength": 255,
          "description": "The RBA ID of the location."
        },
        "lei_id": {
          "type": "string",
          "maxLength": 20,
          "minLength": 20,
          "pattern": "^[A-Z0-9]{18}[0-9]{2}$",
          "description": "The LEI ID of the location."
        },
        "duns_id": {
          "type": "string",
          "maxLength": 9,
          "minLength": 9,
          "pattern": "^[0-9]{9}$",
          "description": "The DUNS ID of the location."
        }
      }
    }
  ]
}
