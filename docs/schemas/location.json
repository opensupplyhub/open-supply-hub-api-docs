{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents a location.",
  "allOf": [
    {
      "properties": {
        "os_id": {
          "type": "string",
          "description": "The unique identifier for a location."
        }
      },
      "required": ["os_id"]
    },
    {
      "$ref": "location_base.json"
    },
    {
      "properties": {
        "country": {
          "$ref": "country.json"
        },
        "claim_status": {
          "type": "string",
          "description": "Indicates whether a location has been claimed by an owner or manager.",
          "enum": ["claimed", "unclaimed", "pending"]
        },
        "claimed_at": {
          "type": "string",
          "description": "Represents the date of the claim update"
        }
      }
    },
    {
      "$ref": "additional_identifiers.json"
    }
  ],
  "required" : ["name", "address", "country"]
}
