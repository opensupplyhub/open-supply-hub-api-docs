{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents a facility",
  "allOf": [
    {
      "properties": {
        "os_id": {
          "type": "string",
          "description": "The unique identifier for a facility"
        }
      },
      "required": ["os_id"]
    },
    {
      "$ref": "facility_base.json"
    },
    {
      "properties": {
        "country": {
          "$ref": "country.json"
        },
        "claim_status": {
          "type": "string",
          "description": "Indicates whether a facility has been claimed by an owner or manager",
          "enum": ["claimed", "unclaimed", "pending"]
        }
      }
    }
  ]
}
