{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "This schema represents a raw_json object.",
  "allOf": [
    {
      "properties": {
        "name": {
          "type": "string"
        },
        "sector": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "address": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "description": "The ISO 3166-1 alpha-2 code of the country."
        },
        "product_type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "facility_type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "parent_company": {
          "type": "string"
        },
        "processing_type": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "number_of_workers": {
          "type": "object",
          "properties": {
            "max": {
              "type": "integer",
              "minimum": 1
            },
            "min": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "max",
            "min"
          ]
        }
      },
      "required": [
        "name",
        "address",
        "country"
      ]
    },
    {
      "$ref": "additional_identifiers.json"
    },
    {
      "$ref": "parent_company_os_id.json"
    }
  ]
}
